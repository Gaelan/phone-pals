<%= form_with(model: [callee.organization, callee], local: true) do |form| %>
  <% if callee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(callee.errors.count, "error") %> prohibited this callee from being saved:</h2>

      <ul>
        <% callee.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
    <p>
      This name will be visible to volunteers that choose to call this person.
      You may prefer to enter something such as "J. Doe" to preserve privacy.
    </p>
  </div>

  <div class="field">
    <%= form.label :bio %>
    <%= form.text_area :bio %>
  </div>

  <div class="field">
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
